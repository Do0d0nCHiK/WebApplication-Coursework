@page
@model WebApplication2.Pages.AddRentInfoModel
@{
}
<head>
    
    <style>
        body{
            background-color: rgb(25,25,25);
        }
    </style>
</head>
<body>
    <h1 class="h1" style="color:white;text-align:center;">Добавить данные об аренде</h1>
    <form method="post">
        <div class="input-group mb-3">
            <input type="number" class="form-control bg-dark text-light" asp-for="ClientID" placeholder="ID клиента" aria-label="ID клиента" required min="1" title="ID клиента не должен быть меньше 1"/>
            <input type="number" class="form-control bg-dark text-light" asp-for="CarID" placeholder="ID машины" aria-label="ID машины" required min="1" title="ID машины не должен быть меньше 1"/>
            <input type="number" class="form-control bg-dark text-light" asp-for="Period" placeholder="Срок аренды" aria-label="Срок аренды" required min="1" max="100" title="Срок аренды должен быть в пределах от 1 до 100"/>
            <span class="input-group-text" id="basic-addon1">дней</span>
        </div>
        <div class="input-group mb-3">
            <input type="date" class="form-control bg-dark text-light" asp-for="_date" placeholder="Дата начала аренды" aria-label="Начало аренды" min="2010-01-01" max="2026-01-01" title="Дата должна быть в пределах 01.01.2010-01.01.2026" />
        </div>
        <button type="submit" class="btn btn-outline-secondary btn-dark">Добавить</button>
    </form>
</body>
