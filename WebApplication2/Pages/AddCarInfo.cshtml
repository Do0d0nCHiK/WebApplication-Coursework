@page
@model WebApplication2.Pages.AddCarInfoModel
@{
}
<head>
    <style>
        body{
            background-color: rgb(25,25,25);
        }
    </style>
</head>
<body>
    <h1 class="h1 h1-header" style="color:white;">Добавить машину</h1>
    <form method="post">
        <div class="input-group mb-3">
            <input type="text" class="form-control bg-dark text-light" asp-for="Brand" placeholder="Марка" aria-label="Марка" required maxlength="30" pattern="\D+" title="Неккоректный формат марки автомобиля"/>
            <input type="text" class="form-control bg-dark text-light" asp-for="Model" placeholder="Модель" aria-label="Модель" required pattern="^[a-zA-Z0-9\s\-]+" title="Некорректный формат модели"/>
            <input type="text" class="form-control bg-dark text-light" asp-for="Release" placeholder="Год выпуска" aria-label="Год выпуска" required pattern="^(19[0-9][0-9]|201[0-9]|202[0-5])" title="Некорректный формат года" />
        </div>
        <div class="input-group mb-3">
            <input type="text" class="form-control bg-dark text-light" asp-for="Power" placeholder="Мощность двигателя" aria-label="Мощность" required pattern="^([1-9])\d{1-3}" title="Некорректный формат мощности"/>
            <span class="input-group-text" id="basic-addon1">л.с.</span>
            <input type="text" class="form-control bg-dark text-light" asp-for="Cost" placeholder="Цена аренты" aria-label="Цена аренды" required pattern="^\d+" title="Некорректный формат цены аренды"/>
            <span class="input-group-text" id="basic-addon1">руб./сут.</span>
        </div>
        <div class="input-group mb-3">
            <input type="text" class="form-control bg-dark text-light" asp-for="PlateNumber" placeholder="Гос. номер" aria-label="Государственный номер" required pattern="^[АВЕКМНОРСТУХ]\d{3}[АВЕКМНОРСТУХ]{2}\d{2,3}" title="Некорректный формат гос. номера"/>
        </div>
        <button type="submit" class="btn btn-outline-secondary btn-dark">Добавить</button>
    </form>
</body>
